<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RazorpayDemo" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--   edit text style with color hint and size -->
    <style name="Input_edittext_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="expandedHintEnabled">true</item>
        <item name="android:textColorHint">@color/bg_4cffffff</item>
        <item name="errorTextColor">@color/red_ff4d4d</item>
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@color/bg_19ffffff</item>
        <item name="boxStrokeErrorColor">@color/red_ff4d4d</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="errorEnabled">true</item>

    </style>

    <style name="Edittext_style">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_99ffffff</item>
        <item name="android:maxLength">150</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="label_style">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <dimen name="_18ssp">18sp</dimen>
</resources>